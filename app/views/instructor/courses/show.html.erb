<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <%= image_tag current_course.image.to_s, class: 'img-fluid' %>
  <br />
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
  
</div>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-default">
        <%= number_to_currency current_course.cost %>
      </span>

      <% if current_user && current_user == current_course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(current_course), class: 'btn btn-danger btn-large' %>
      <% end %>

    </div>

    <div class="col-sm-8 col-12">
      <%= current_course.description %>
    </div>
  </div>

  <div class="col-12">
    <% current_course.sections.each do |section| %>
      <div class="section">
        <%= section.title %>
        <% section.lessons.rank(:row_order).each do |lesson| %>
          <div class="lesson">
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>